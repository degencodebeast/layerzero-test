{
  "exclude": ["node_modules"],
  "include": ["src/**/*","deploy", "tasks", "test", "hardhat.config.ts"],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}

